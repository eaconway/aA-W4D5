<% if type == :signup %>
  <% button_msg = "Sign Up" %>
  <% action_url = users_url %>
  <% headed_line_text = "Sign Up for an account, below:" %>
<% elsif type == :edit %>
  <% button_msg = "Edit User" %>
  <% action_url = user_url(user) %>
  <% headed_line_text = "Edit your username or password below:" %>
<% elsif type == :signin %>
  <% button_msg = "Sign In" %>
  <% action_url = session_url%>
  <% headed_line_text = "Sign In below:" %>
<% end %>

<h2> <%= headed_line_text %></h2>

<form action="<%= action_url %>" method="post">
  <%= auth_token %>
  <% if type == :edit %>
    <input type="hidden" name="_method" value="patch">
  <% end %>
  
  <label for="email">Email:</label>
  <input type="email" id='email' name="user[email]" value="<%= user.email %>">
  <br>
  
  <label for="password">Password:</label>
  <input type="password" id='password' name="user[password]">
  <br>
  
  <input type="submit" name="submit" value="<%=button_msg %>">
</form>